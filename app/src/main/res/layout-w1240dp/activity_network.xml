<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.network.NetworkActivity">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:layout_editor_absoluteX="200dp" />

    <Button
        android:id="@+id/recognizeButtonPerev"
        android:layout_width="318dp"
        android:layout_height="71dp"
        android:text="Распознать букву"
        tools:layout_editor_absoluteX="548dp"
        tools:layout_editor_absoluteY="813dp" />

    <EditText
        android:id="@+id/textNumberHiddenPerev"
        android:layout_width="355dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="351dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/textLerningRatePerev"
        android:layout_width="362dp"
        android:layout_height="72dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/textNumberCyclePerev"
        android:layout_width="361dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="numberSigned"
        tools:layout_editor_absoluteX="353dp"
        tools:layout_editor_absoluteY="250dp" />

    <EditText
        android:id="@+id/textErrorPerev"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="348dp"
        tools:layout_editor_absoluteY="330dp" />

</androidx.constraintlayout.widget.ConstraintLayout>